<template>
  <div id="order">
    <div class="wrap" v-if="applicant.length > 0">
      <div class="title">投保人信息</div>
      <orderForm :content="applicant"></orderForm>
    </div>
    <div class="wrap" v-if="insured.length > 0">
      <div class="title">被保人信息</div>
      <orderForm></orderForm>
    </div>
    <div class="wrap" v-if="beneficiary.length > 0">
      <div class="title">收益人信息</div>
      <orderForm></orderForm>
    </div>
    <div class="wrap" v-if="bank.length > 0">
      <div class="title">续期银行账户</div>
      <orderForm></orderForm>
    </div>
    <div class="foot">
      <div class="btn">下一步</div>
    </div>
  </div>
</template>

<script>
import orderForm from '@/components/pay/OrderForm'
export default {
  name: 'Order',
  components: {
    orderForm
  },
  props: {
    id: {} // 产品ID
  },
  data () {
    return {
      applicant: [], // 投保人信息
      insured: [], // 被保人信息
      beneficiary: [], // 受益人信息
      bank: [] // 续期银行账户信息
    }
  },
  mounted () {
    this.getInfo()
  },
  methods: {
    // 获取所有信息
    getInfo () {
      this.axios.get('/api2/getOrderForm', {
        params: {
          plan_id: this.id
        }
      }).then(res => {
        this.applicant = res.data.keys[0].inputs
        this.insured = res.data.keys[1].inputs
        this.beneficiary = res.data.keys[2].inputs
        this.bank = res.data.keys[3].inputs
      })
    }
  }
}
</script>

