* {
  margin: 0;
  padding: 0;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
             "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB",
             "Microsoft YaHei",SimSun, sans-serif;
  background: #f8f8f8;
  line-height: 1.5;
}

/* svg */
.icon {
  vertical-align: middle;
  fill: currentColor;
  overflow: hidden;
}

:root {
  --blue: #69c;
  --red: #c00;
  --bgc: #fff;
  --b-fs: 32px;
  --m-fs: 30px;
  --s-fs: 26px;
  --b-bgc: #333;
  --s-bgc: #666;
  --l-bgc: #999;
  --edge: 20px;
}

.price {
  font-size: var(--s-fs);
  color: var(--l-bgc);
  float: right;
  & span {
    font-size: var(--b-fs);
    color: var(--red);
  }
}
