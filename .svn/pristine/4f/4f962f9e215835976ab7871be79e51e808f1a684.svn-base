:root {
  --blue: #69c;
  --d-blue: #e5f2ff;
  --s-blue: #f0f5fa;
  --red: #c00;
  --bgc: #fff;
  --price-fs: 36px;
  --b-fs: 32px;
  --m-fs: 30px;
  --m2-fs: 28px;
  --m3-fs: 26px;
  --s-fs: 24px;
  --d-bgc: #333;
  --m-bgc: #666;
  --s-bgc: #999;
  --edge: 20px;
}

/* 产品列表价格 */
.price {
  font-size: var(--s-fs);
  color: var(--l-bgc);
  float: right;
  & span {
    font-size: var(--price-fs);
    color: var(--red);
  }
}
